<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bckimg"    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" >


            <TextView
                android:id="@+id/tips1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="    SAFETY TIPS
                "
                android:textSize="40dp"
                />


        </RelativeLayout>


    </ScrollView>

    <TextView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 1) Be aware of your surroundings and people around you."
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />
    <TextView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 2) Learn self defence."
        android:textSize="20dp"
        android:layout_below="@+id/first"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 3) Use pepper spray."
        android:textSize="20dp"
        android:layout_below="@+id/second"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 4) Always try to escape if possible."
        android:textSize="20dp"
        android:layout_below="@+id/third"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/fifth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 5) Lock all the doors and windows of your vehicle while driving."
        android:textSize="20dp"
        android:layout_below="@+id/fourth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/sixth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 6) Ensure your safety in cyberspace."
        android:textSize="20dp"
        android:layout_below="@+id/fifth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/seventh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 7) Take care of your accomodation in your trips."
        android:textSize="20dp"
        android:layout_below="@+id/sixth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 8) Priortize your emergency contacts."
        android:textSize="20dp"
        android:layout_below="@+id/seventh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 9) Be careful of home invasions."
        android:textSize="20dp"
        android:layout_below="@+id/eight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 10) Use your sixth sense."
        android:textSize="20dp"
        android:layout_below="@+id/nine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>




